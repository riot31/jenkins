<apex:page showHeader="false" sidebar="false" controller="StoreFrontController" tabStyle="Merchandise__c">  
    <apex:form >
        <apex:pageBlock title="Our products">
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!products}" var="pitem">
                    <apex:column headerValue="Product" value="{!pitem.name}"/>
                    <apex:column headerValue="Description" value="{!pitem.Description}"/>               
                    <apex:column headerValue="Price">
                        <apex:outputText value="{0,number,currency}">
                            <apex:param value="{!pitem.Price}"/>
                        </apex:outputText>
                    </apex:column>
                    <apex:column headerValue="Qtu to Buy">
                        <apex:inputText value="{!pitem.gtyToBuy}" rendered="{! pitem.inStock}"/>
                        <apex:outputText value="Out of Stock" rendered="{! NOT(pitem.inStock)}"/>
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
            <apex:pageBlockSection >
                <apex:commandButton action="{!addToCart}" reRender="shopping_cart" value="Add to Cart"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
       <apex:pageBlock title="You Cart" id="shopping_cart">
            <apex:outputText value="{!cartContents}" escape="false"/>
      </apex:pageBlock>
    </apex:form>
     <analytics:reportChart reportId="00O28000009mlNi" >
     </analytics:reportChart>
     
</apex:page>